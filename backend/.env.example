# NLJ Platform Backend Environment Configuration

# Application settings
APP_NAME="NLJ Platform API"
DEBUG=true
VERSION="0.1.0"

# Database configuration
DATABASE_URL="postgresql+asyncpg://nlj_user:nlj_pass@localhost:5432/nlj_platform"

# Security settings (CHANGE IN PRODUCTION!)
SECRET_KEY="your-secret-key-change-in-production-use-strong-random-key"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS settings for frontend integration
ALLOWED_HOSTS='["http://localhost:3000", "http://localhost:5173", "http://localhost:8080"]'

# File upload settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR="uploads"

# Feature flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_NOTIFICATIONS=false

# Future Keycloak integration (leave empty for simple auth)
KEYCLOAK_URL=""
KEYCLOAK_REALM=""
KEYCLOAK_CLIENT_ID=""

# Optional Redis for caching
REDIS_URL="redis://localhost:6379"

# Email settings (for future notifications)
EMAIL_HOST=""
EMAIL_PORT=587
EMAIL_USER=""
EMAIL_PASSWORD=""
EMAIL_USE_TLS=true