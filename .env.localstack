# LocalStack Development Environment Variables
# Copy to backend/.env for local development with LocalStack

# Enable email notifications for development
ENABLE_EMAIL_NOTIFICATIONS=true

# AWS/LocalStack Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# S3 Configuration for LocalStack
S3_ENDPOINT_URL=http://localhost:4566
S3_BUCKET_MEDIA=nlj-media-dev
S3_BUCKET_BACKUPS=nlj-backups-dev
S3_PUBLIC_URL_BASE=http://localhost:4566/nlj-media-dev

# SES Configuration for LocalStack
SES_ENDPOINT_URL=http://localhost:4566
SES_FROM_EMAIL=noreply@nlj-platform.local
SES_ADMIN_EMAIL=admin@nlj-platform.local
SES_CONFIGURATION_SET=nlj-email-tracking

# Database Configuration
# Option 1: Direct PostgreSQL (current)
DATABASE_URL=postgresql+asyncpg://nlj_user:nlj_pass@localhost:5432/nlj_platform

# Option 2: RDS via LocalStack (uncomment to enable)
# USE_RDS=true
# RDS_ENDPOINT_URL=http://localhost:4566
# RDS_DB_INSTANCE_ID=nlj-postgres-dev
# RDS_REPLICA_INSTANCE_ID=nlj-postgres-replica
# DATABASE_URL will be dynamically constructed from RDS endpoint

# Kafka Configuration (unchanged)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CLIENT_ID=nlj-platform

# Frontend URL for development
FRONTEND_URL=http://localhost:5173

# Other API keys (keep your existing values)
CLAUDE_API_KEY=${CLAUDE_API_KEY}
ELEVENLABS_API_KEY=${ELEVENLABS_API_KEY}

# Application Settings
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production-localstack-dev
MAX_FILE_SIZE=524288000